          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
<div class="top-bar">
    <nav class="navbar navbar-light navbar-expand-md bg-dark" id="top-navbar">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="#">
            </a>
            <button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-3">
                <span class="visually-hidden">Toggle navigation</span>
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navcol-3">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <img src="images/avatar.png" alt="" width="32" height="32" class="rounded-circle">
                    </li>
                </ul>
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link active" style="color: black; text-align: center;" href="#">Ayush Old Age
                            Care</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/auth/logout" style="color: white; text-decoration: none;">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>
<div class="main-content">
    <% if ( status == "loggedIN"){ %>
        <div class="main-content-top-bar">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-2 col-md-3">
                        <div class="sticky-note">
                            <div class="card">
                                <div class="card-body">
                                    <strong>Patient's On High Alert:</strong>
                                    <% highAlertList.forEach(patient => { %>
                                        <p class="card-text"><%= patient.name %></p>
                                    <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-5">
                        <div class="card card-center patient-page-card">
                            <a href="/patient" class="card-anchor">
                                <div class="card-body">
                                    <div class="patient-card">
                                        <div class="patient-card-info">
                                            <h5 class="card-title" style="text-align: left">Patient Log</h5>
                                            <div class="sub-patient-info">
                                                <div class="patient-view">
                                                    <div class="patients-text">
                                                        <p class="card-text" style="text-align: left">Patients:</p>
                                                    </div>
                                                    <div class="live-patient-view">
                                                        <p class="card-text" style="text-align: center">
                                                            <strong><%= noPatients %></strong></p>
                                                    </div>
                                                </div>
                                                <div class="high-alert-view">
                                                    <div class="high-alert-text">
                                                        <p class="card-text" style="text-align: left">On High Alert:</p>
                                                    </div>
                                                    <div class="live-high-alert-view">
                                                        <p class="card-text" style="text-align: center">
                                                            <strong><%= noHighAlert %></strong></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="patient-card-pic">
                                            <img src="images/patient.png" alt="" width="100%" height="100%">
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="add-button text-center">
                            <button type="button" class="btn btn-primary dynamic-button" data-bs-toggle="modal"
                                    data-bs-target="#addModal">+ Add
                            </button>
                            <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel"
                                 aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Patient</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                        </div>
                                        <form action="/addpatient" method="POST" class="form-addpatient">
                                            <div class="modal-body">
                                                <div class="form-floating">
                                                    <input type="text" class="form-control top" placeholder="Name"
                                                           name="patient_fullname" id="fname" autocomplete="off"
                                                           required autofocus>
                                                    <label for="fname">Full Name</label>
                                                </div>
                                                <div class="form-floating">
                                                    <input type="text" class="form-control middle"
                                                           placeholder="Family" name="family" id="family">
                                                    <label for="family">Family (not required; separate each name with
                                                        ",")</label>
                                                </div>
                                                <div class="form-floating">
                                                    <input type="date" class="form-control bottom"
                                                           placeholder="date" name='date' id="datepicker"
                                                           autocomplete="off" required>
                                                    <label for="datepicker">Date of Admission</label>
                                                </div>
                                                <div class="footer">
                                                    <div class="alert-container">

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    Cancel
                                                </button>
                                                <button type="submit" class="btn btn-primary">+ Add New Patient</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 d-flex-align-items-center">
                        <div class="right-side-info-p">
                            <div class="date-medstock-info" style="white-space: nowrap;">
                                <div class="date-view">
                                    <div class="todays-date-text">
                                        <span>Today's Date:</span>
                                    </div>
                                    <div class="todays-date-js">
                                        <p class="todays-date"></p>
                                    </div>
                                </div>
                                <div class="med-stock-view">
                                    <div class="medication-stock-text">
                                        <span>Medication Stock:</span>
                                    </div>
                                    <div class="med-status">
                                        <strong><p class="med-stock-text">LOW/MED/OK</p></strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover patient-table">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Pills Assigned</th>
                <th scope="col">Family</th>
                <th scope="col">Date of Admission</th>
                <th scope="col">High Alert</th>
                <th scope="col">Patient ID</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody class="table-group-divider">
            <% patients.forEach(function(patient) { %>
                <tr>
                    <td><strong><%= patient.name %></strong></td>
                    <td><%= patient.pills_assigned %></td>
                    <td><%= patient.family %></td>
                    <td><%= patient.date_of_admission %></td>
                    <td><%= patient.on_high_alert %></td>
                    <td><%= patient.Patient_id %></td>
                    <td>
                        <button type="button" class="btn btn-primary dynamic-button" data-bs-toggle="modal"
                                data-bs-target="#editModal" data-bs-pName="<%= patient.name %>"
                                data-bs-pillsAssign="<%= patient.pills_assigned %>"
                                data-bs-on_high_alert="<%= patient.on_high_alert %>"
                                data-bs-familyInfo="<%= patient.family %>"
                                data-bs-dateOfAdmission="<%= patient.date_of_admission %>"
                                data-bs-pID="<%= patient.Patient_id %>">Edit
                        </button>
                        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel"></h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <form action="/update/patient" method="POST" class="form-addpatient">
                                        <div class="modal-body">
                                            <div class="form-floating">
                                                <input type="text" class="form-control top" placeholder="Name"
                                                       name="patient_fullname" id="fname" autocomplete="off"
                                                       required autofocus>
                                                <label for="fname">Full Name</label>
                                            </div>
                                            <div class="form-floating">
                                                <input type="text" class="form-control middle"
                                                       placeholder="pillsAssigned"
                                                       name="pillsAssigned" id="pillsAssigned" autocomplete="off"
                                                       required >
                                                <label for="fname">Pills Assigned</label>
                                            </div>
                                            <div class="form-floating">
                                                <input type="text" class="form-control middle"
                                                       placeholder="Family" name="family" id="family">
                                                <label for="family">Family</label>
                                            </div>
                                            <div class="form-floating">
                                                <input type="date" class="form-control middle"
                                                       placeholder="date" name='date' id="datepicker"
                                                       autocomplete="off" required>
                                                <label for="datepicker">Date of Admission</label>
                                            </div>
                                            <div class="form-floating">
                                                <select class="form-select middle" name="on_high_alert_select"
                                                        id="on_high_alert_select">
                                                    <option selected id="selected_selection" value=""></option>
                                                    <option value="" id="second_selection"></option>
                                                </select>
                                                <label for="floatingSelect">On high alert:</label>
                                            </div>
                                            <div class="form-floating">
                                                <input type="text" class="form-control bottom" placeholder="pID"
                                                       name="pID" id="pID" autocomplete="off"
                                                       autofocus readonly>
                                                <label for="fname">Patient ID</label>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                Cancel
                                            </button>
                                            <button type="submit" class="btn btn-primary">Update Patient Record</button>
                                                <button type="button" class="btn btn-danger" id="delete-btn">Delete Record</button>
                                        </div>
                                    </form>
                                            <form action="/update/patientDelete" method="POST" id="delete-form">
                                                <input type="hidden" name="pID" id="delete-pID">
                                            </form>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
</div>
<% } else { %>
    <div class="container my-5">
        <div class="card text-center text-bg-danger" style="width: 100%">
            <div class="card-body">
                <h5 class="card-title">Welcome to NurseMedCall!</h5>
                <h6 class="card-subtitle mb-2 text-muted">There is no user currently logged in</h6>
                <p class="card-text">Use the button below to proceed</p>
                <a class="btn btn-warning btn-lg" href="/login"
                   style="color: white; text-decoration: none;">Login</a>
            </div>
        </div>
    </div>
<% } %>
</div>
<div class="d-flex flex-column flex-shrink-0 p-3 bg-light sidebar bg-dark" id="side-navbar">
    <% if ( status == "loggedIN"){ %>
        <div class="avatar-ctn" style="text-align: center; padding: 1%">
            <img src="images/avatar.png" class="avatar"
                 style="width: 65%;"
                 alt="user profile picture">
        </div>
    <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="dropdownUser1"
       data-bs-toggle="dropdown" aria-expanded="false">
        <strong><%= user.name %></strong>
        <% } else { %>
        <% } %>
    </a>
    <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
        <li><a class="dropdown-item" href="/profile">Profile</a></li>
        <li>
            <hr class="dropdown-divider">
        </li>
        <li><a class="dropdown-item" href="/auth/logout">Logout</a></li>
    </ul>
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
        <div class="map-image">
            <img src="images/home map.png" alt="home map" width="150" height="100" id="map_image">
        </div>
        <span class="fs-4">Nurse</span><br>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
        <% if (status == "loggedIN"){ %>
            <li class="nav-item">
                <a href="/" class="nav-link link-dark" aria-current="page">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#home"></use>
                    </svg>
                    Home
                </a>
            </li>
            <li>
                <a href="#" class="nav-link active">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#table"></use>
                    </svg>
                    Patient Log
                </a>
            </li>
            <li>
                <a href="/auth/logout" class="nav-link link-dark">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#table"></use>
                    </svg>
                    Logout
                </a>
            </li>
        <% } else { %>
        <% } %>
    </ul>
</div>
<script>
    const today = new Date();
    const dd = String(today.getDate()).padStart(2, '0');
    const mm = String(today.getMonth() + 1).padStart(2, '0');
    const yyyy = today.getFullYear();
    const todaysDate = `${dd}/${mm}/${yyyy}`;
    document.querySelector('.todays-date').textContent = todaysDate;
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<script>
    const message = decodeURIComponent(document.cookie.split("message=")[1]);

    // noinspection EqualityComparisonWithCoercionJS
    if (message == undefined || message == "undefined" || message == "null" || message == null) {
    } else {
        const dynamicButton = document.querySelector(".dynamic-button");
        if (dynamicButton) {
            dynamicButton.textContent = `${message}`;
            document.cookie = "message=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
        }
    }

    const editModal = document.getElementById('editModal')
    editModal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget
        const pName = button.getAttribute('data-bs-pName')
        const pillAssigned = button.getAttribute('data-bs-pillsAssign')
        const familyInfo = button.getAttribute('data-bs-familyInfo')
        const dateOfAdmission = button.getAttribute('data-bs-dateOfAdmission')
        const pID = button.getAttribute('data-bs-pID')
        const onHighAlert = button.getAttribute('data-bs-on_high_alert')

        const modalTitle = editModal.querySelector('.modal-title')
        const modalNameInput = editModal.querySelector('.modal-body #fname')
        const modalPillsAssigned = editModal.querySelector('.modal-body #pillsAssigned')
        const modalFamilyInfo = editModal.querySelector('.modal-body #family')
        const modalDateOfAdmission = editModal.querySelector('.modal-body #datepicker')
        const modalPID = editModal.querySelector('.modal-body #pID')
        const modalOnHighAlert_dropdown = editModal.querySelector('.modal-body #on_high_alert_select')
        const modalOnHighAlert_select = editModal.querySelector('.modal-body #selected_selection')
        const modalOnHighAlert_second = editModal.querySelector('.modal-body #second_selection')

        if (onHighAlert == "true") {
            modalOnHighAlert_select.textContent = "true"
            modalOnHighAlert_dropdown.options[0].value = "true"
            modalOnHighAlert_second.textContent = "false"
            modalOnHighAlert_dropdown.options[1].value = "false"
        } else {
            modalOnHighAlert_select.textContent = "false"
            modalOnHighAlert_dropdown.options[0].value = "false"
            modalOnHighAlert_second.textContent = "true"
            modalOnHighAlert_dropdown.options[1].value = "true"
        }

        modalTitle.textContent = `Update ${pName}'s Record`
        modalNameInput.value = pName
        modalPillsAssigned.value = pillAssigned
        modalFamilyInfo.value = familyInfo
        modalDateOfAdmission.date = dateOfAdmission
        modalPID.value = pID

        const pIDInput = document.getElementById('pID');
        const deletePIdInput = document.getElementById('delete-pID');

        deletePIdInput.value = pIDInput.value;

        const deleteBtn = document.getElementById('delete-btn');
        deleteBtn.addEventListener('click', () => {
            const deleteForm = document.getElementById('delete-form');
            deleteForm.submit();
        });

    })
</script>
</body>
</html>